{
  "name": "robot-studio-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm --prefix ../react run dev\" \"npm run dev:electron\"",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "start": "cross-env NODE_ENV=production electron .",
    "build:web": "npm --prefix ../react run build",
    "package": "npm run build:web && electron-builder",
    "package:mac": "npm run package -- --mac",
    "package:win": "npm run package -- --win",
    "package:linux": "npm run package -- --linux"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.robotstudio.desktop",
    "asar": true,
    "files": [
      "../react/dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}

